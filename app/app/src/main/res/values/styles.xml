<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:checkboxStyle">@style/MyTextViewStyle</item>-->
    </style>

    <style name="Theme.NoActionBar" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.Button">
    </style>

    <style name="MatchAndWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wrap.MinHeight">
        <item name="android:minHeight">@dimen/view_min_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Weighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Wrap.WhiteAlphaBackground">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_alpha_background</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Wrap.WhiteAlphaBackground.CheckBox">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="Weighted.WhiteAlphaBackground">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_alpha_background</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Wrap.WhiteAlphaSquareBackground">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_alpha_square_background</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Weighted.WhiteAlphaSqareBackground">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_alpha_square_background</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Weighted.MinHeight">
        <item name="android:minHeight">@dimen/view_min_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Weighted.MinHeight.Shadow">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Weighted.Shadow">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Shadow">
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Weighted.MinHeight.WhiteAlphaBackground">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_alpha_background</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Wrap.MinHeight.WhiteAlphaBackground">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_alpha_background</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="WhiteAlphaBackground">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_alpha_background</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="WhiteAlphaSquareBackground">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_alpha_square_background</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Weighted.View">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="PathFilter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
    </style>

    <style name="SignedNumberFilter.WhiteAlphaSquareBackground">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/white_alpha_square_background</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="SignedNumberFilter">
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:minEms">1</item>
        <item name="android:maxLength">2</item>
        <item name="android:imeOptions">flagNoExtractUi|actionDone</item>
    </style>

    <style name="LinearGainFocus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="AutoResizeTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DetailNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StandingNumber">
        <item name="android:layout_width">@dimen/standing_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
